n=int(input())

for i in range(n):
    a=input()
    b=float(input())
    line=input().split()
    s1, s2, s3, s4, s5, s6, s7=line
    s1, s2, s3, s4, s5, s6, s7=float(s1),float(s2),float(s3),float(s4),float(s5),float(s6),float(s7)
    list=[ s1, s2, s3, s4, s5, s6, s7]
    list.remove(max(list))
    list.remove(min(list))
    s=sum(list)*b
    print("%s %.2f" %(a, s))
